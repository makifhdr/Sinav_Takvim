<Window x:Class="Sinav_Takvim.DersSecimiWindow"
        FontSize="20"
        FontFamily="Eras ITC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="DersSecimiWindow" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Height="1000" Width="1500">
    <StackPanel>
        <UniformGrid Columns="6" HorizontalAlignment="Left" MaxWidth="1450">
            <TextBlock Text="Ders&#x0a;Kodu" Background="AliceBlue"
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Ders&#x0a;Adı" Background="AliceBlue"
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Öğretim&#x0a;Görevlisi" Background="AliceBlue"
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Sınıf" Background="AliceBlue"
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Seçmeli&#x0a;Ders" Background="AliceBlue"
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Padding="5" Margin="10" TextAlignment="Center" Width="218.5"/>
        </UniformGrid>
        <ScrollViewer MaxHeight="700" MinHeight="700" MaxWidth="1450" Margin="0,0,10,0" HorizontalAlignment="Left">
            <UniformGrid x:Name="DersGrid" Columns="6">
                
            </UniformGrid>
        </ScrollViewer>
        <TextBlock Text="Lütfen sınav programına dahil olmasını istemediğiniz dersleri işaretleyin."
                   Padding="5" Margin="10" TextAlignment="Center"/>
        <Button x:Name="OnaylaButton" Click="OnaylaButton_Click" Content="Onayla" Height="100" Margin="10" Width="150"/>
    </StackPanel>
</Window>
