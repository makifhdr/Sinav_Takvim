<Window x:Class="Sinav_Takvim.LoginWindow" FontSize="25"
        FontFamily="Eras ITC"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="800">
    <StackPanel HorizontalAlignment="Center" Orientation="Vertical" VerticalAlignment="Center">
        <Label Content="Sınav Takvim Yönetim Sistemi" HorizontalAlignment="Center"/>
        <UniformGrid>
                <Label Content="E-posta:" HorizontalAlignment="Right"/>
                <TextBox x:Name="eposta" Height="auto" Width="350" HorizontalAlignment="Left"/>
                <Label Content="Şifre:" HorizontalAlignment="Right"/>
                <PasswordBox x:Name="sifre" Height="auto" Width="350" HorizontalAlignment="Left"/>
        </UniformGrid>
        <Button x:Name="LoginButton" Content="Giriş" Width="100" Margin="10"
                Click="Login_Button_Click"/>
        <TextBlock x:Name="UyariBox"/>
    </StackPanel>
</Window>
