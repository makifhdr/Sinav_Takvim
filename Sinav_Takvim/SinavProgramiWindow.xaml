<Window x:Class="Sinav_Takvim.SinavProgramiWindow"
        FontSize="20"
        FontFamily="Eras ITC"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="SinavProgramiWindow" WindowState="Maximized" WindowStartupLocation="CenterScreen" Height="1080" Width="1920">
    <StackPanel>
        <TextBlock x:Name="TitleTextBlock" FontSize="30" Background="AliceBlue" 
                   Padding="5" Margin="10" TextAlignment="Center"/>
        
        <UniformGrid x:Name="TitleGrid" Columns="6" MinWidth="1850" HorizontalAlignment="Left">
            <TextBlock Text="Tarih" Background="AliceBlue" 
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Sınav&#x0a;Saati" Background="AliceBlue" 
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Ders&#x0a;Adı" Background="AliceBlue" 
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Öğretim&#x0a;Elemanı" Background="AliceBlue" 
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Text="Derslikler" Background="AliceBlue" 
                       Padding="5" Margin="10" TextAlignment="Center"/>
            <TextBlock Padding="5" Margin="10" TextAlignment="Center"/>
        </UniformGrid>
        
        <ScrollViewer MaxHeight="700" MinHeight="700" MaxWidth="1570" MinWidth="1870" HorizontalAlignment="Left">
            <UniformGrid x:Name="SinavGrid" Columns="6">
                                    
            </UniformGrid>
        </ScrollViewer>
        <Button x:Name="ExcelOlusturButton" Content="Excel Oluştur" Click="ExcelOlusturButton_Click"
                Height="100" Margin="10" Width="200" HorizontalAlignment="Center"/>
    </StackPanel>
</Window>
