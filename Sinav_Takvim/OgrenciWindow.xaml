<Window x:Class="Sinav_Takvim.OgrenciWindow"
        FontFamily="Eras ITC"
        WindowStartupLocation="CenterScreen"
        Background="DarkGray"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="OgrenciWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="AdTextBlock" Text="Öğrenci: " Background="AliceBlue" 
                   Padding="5" TextAlignment="Center"/>
        <TextBlock Text="Aldığı dersler:" Background="AliceBlue" 
                   Padding="5"  TextAlignment="Left"/>
        <TextBlock x:Name="DersListesiBlock" Background="AliceBlue" 
                   Padding="5"  TextAlignment="Left"/>
    </StackPanel>
</Window>
