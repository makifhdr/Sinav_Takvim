            <TextBlock x:Name="OgrenciListesiBlock1" Background="AliceBlue" 
                       Padding="5"  TextAlignment="Left"/>
            <TextBlock x:Name="OgrenciListesiBlock2" Background="AliceBlue" 
                       Padding="5"  TextAlignment="Left"/>
            <TextBlock x:Name="OgrenciListesiBlock3" Background="AliceBlue" 
                       Padding="5"  TextAlignment="Left"/>
            <TextBlock x:Name="OgrenciListesiBlock4" Background="AliceBlue" 
                       Padding="5"  TextAlignment="Left"/>
        </StackPanel>
    </StackPanel>
</Window>
